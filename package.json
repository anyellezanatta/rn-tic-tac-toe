{
  "name": "tic-tac-toe",
  "version": "1.0.0",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "android": "expo run:android",
    "android:release": "expo run:android --variant release",
    "ios": "rm -f ios/.xcode.env.local && expo run:ios",
    "ios:release": "rm -f ios/.xcode.env.local && expo run:ios --configuration Release",
    "compile": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest --passWithNoTests",
    "prepare": "husky"
  },
  "dependencies": {
    "expo": "~51.0.14",
    "expo-dev-client": "^4.0.18",
    "expo-font": "~12.0.7",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "^3.0.6",
    "react": "18.2.0",
    "react-native": "0.74.2",
    "react-native-reanimated": "~3.10.1",
    "react-native-svg": "15.2.0",
    "react-native-unistyles": "^2.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/react": "~18.2.45",
    "eslint": "^8.57.0",
    "eslint-config-universe": "^12.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-expo": "51.0.2",
    "prettier": "^3.3.2",
    "typescript": "~5.3.3"
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "always",
    "bracketSameLine": true,
    "singleQuote": false,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "universe/native"
    ],
    "rules": {
      "prettier/prettier": "off",
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-import-type-side-effects": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/no-unstable-nested-components": "warn",
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            {
              "group": [
                "**/../*"
              ],
              "message": "Relative imports are not allowed. Please use absolute imports instead."
            }
          ]
        }
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            [
              "parent",
              "sibling"
            ]
          ],
          "pathGroups": [
            {
              "pattern": "react*",
              "group": "builtin",
              "position": "before"
            },
            {
              "pattern": "expo*",
              "group": "builtin",
              "position": "before"
            },
            {
              "pattern": "@/**",
              "group": "internal",
              "position": "before"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "react",
            "react-native",
            "expo**"
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    ".expo",
    ".yarn",
    "assets",
    "android",
    "ios"
  ],
  "jest": {
    "preset": "jest-expo"
  },
  "packageManager": "yarn@4.2.1"
}
